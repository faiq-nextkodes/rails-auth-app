<div class="container">
<h1> Adding a new brand </h1>

<br>

<%= render "form" %>

<br>

<ol class="list-group list-group-numbered">
    <div id="brands">
      <% @brands.each do |brand| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">
              <%= brand.brand_name %>
                <br>
            </div>
          </div>
          <% if user_signed_in? %>
          <%= link_to "Edit Brand", edit_brand_path(brand), class:"btn btn-secondary", style:"margin-top: 5px;" %>
          <% end %>
        </li>
        <% end %>
    </div>
  </ol>
</div>
