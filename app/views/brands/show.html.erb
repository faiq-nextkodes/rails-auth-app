<%= render 'shared/navbar' %>
<%= render 'shared/sidebar' %>
<br>
<div class="container">
  <% if user_signed_in? %>

                <div class="col">

                  

                    <br>

                    <div style="justify-self: center;">
                      <%= link_to "Add New Brand" , new_brand_path, class:"btn btn-primary", style:"width: 200px;" %>
                    </div>
                    <% end %>
                    <br>
<ol class="list-group list-group-numbered">
    <div id="brands">
      <% @brands.each do |brand| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">
              <%= brand.brand_name %>
                <br>
            </div>
          </div>
          <% if user_signed_in? %>
          <%= link_to "Edit Brand", edit_brand_path(brand), class:"btn btn-secondary", style:"margin-top: 5px;" %>
          <% end %>
        </li>
        <% end %>
    </div>
  </ol>
</div>