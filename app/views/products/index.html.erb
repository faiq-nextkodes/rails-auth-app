<%= render 'shared/navbar' %>

<% if user_signed_in? %>
<%= render 'shared/sidebar' %>
<% end %>
  <div class="container">
  <br>
  <% if user_signed_in? %>
  <div style="justify-self: center;">
    <%= link_to "Add New Product", new_product_path, class:"btn btn-primary", style:"width: 200px;" %>
  </div>
  <br>
  <div style="justify-self: center;">
    <%= link_to "Add New Brand", new_brand_path, class:"btn btn-primary", style:"width: 200px;" %>
  </div>
  <% end %>
    <br>
  <ol class="list-group list-group-numbered">
    <div id="products">
      <% @products.each do |product| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold">
              <%= product.name %>
                <br>
            </div>
            Price: <%= product.price %> PKR
          </div>
          <% if user_signed_in? %>
          <%= link_to "Edit Product", edit_product_path(product), class:"btn btn-secondary", style:"margin-top: 5px;" %>
          <% end %>
        </li>
        <% end %>
    </div>
  </ol>
</div>
