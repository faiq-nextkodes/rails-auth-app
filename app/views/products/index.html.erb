<%= render 'shared/navbar' %>

  <% if user_signed_in? %>

    <%= render 'shared/sidebar' %>
      <% end %>

        <div class="container">

              <br>

              <div class="row">

                <div class="col">

                  <% if user_signed_in? %>

                    <br>

                    <div style="justify-self: center;">
                      <%= link_to "Add New Product" , new_product_path, class:"btn btn-primary", style:"width: 200px;" %>
                    </div>

                    <% end %>

                      <br>

                      <ol class="list-group list-group-numbered">

                        <div id="products">

                          <% @products.each do |product| %>

                            <li class="list-group-item d-flex justify-content-between align-items-start">

                              <div class="ms-2 me-auto">
                                <div class="fw-bold">
                                  <%= product.name %>
                                    <br>
                                </div>
                                <%= product.brand.brand_name %> <br>
                                Price: <%= product.price %> PKR <br>
                                Type: <%= product.type %>
                              </div>

                              <% if user_signed_in? %>

                                <%= link_to "Edit Product" , edit_product_path(product), class:"btn btn-success",
                                  style:"margin-top: 30px;" %>

                                  <% end %>

                            </li>

                            <% end %>

                        </div>

                      </ol>

                </div>
                
                <% if user_signed_in? %>

                <div class="col">

                  

                    <br>

                    <div style="justify-self: center;">
                      <%= link_to "Add New Brand" , new_brand_path, class:"btn btn-primary", style:"width: 200px;" %>
                    </div>

                    

                      <br>

                      <ol class="list-group list-group-numbered">
                        <div id="brands">
                          <% @brands.each do |brand| %>
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                              <div class="ms-2 me-auto" style="padding: 7px;">
                                <div class="fw-bold" style="padding: 5px;">
                                  <%= brand.brand_name %>
                                </div>
                              </div>
                              <% if user_signed_in? %>
                                <%= link_to "Edit Brand" , edit_brand_path(brand), class:"btn btn-success",
                                  style:"margin-top: 5px;" %>
                                  <% end %>
                            </li>
                            <% end %>
                        </div>
                      </ol>
                      
                </div>
                <% end %>

              </div>

        </div>